{
  "name": "tray-icon-node",
  "version": "0.1.0",
  "description": "Cross-platform system tray icon library for Node.js with native Rust bindings",
  "keywords": [
    "tray",
    "tray-icon",
    "system-tray",
    "systray",
    "menu",
    "native",
    "rust",
    "napi",
    "node-addon",
    "cross-platform",
    "bun"
  ],
  "homepage": "https://github.com/nglmercer/tray-icon-node#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nglmercer/tray-icon-node.git"
  },
  "bugs": {
    "url": "https://github.com/nglmercer/tray-icon-node/issues"
  },
  "license": "MIT",
  "author": {
    "name": "nglmercer",
    "email": "nglmercer@gmail.com"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "*.node",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "clean": "napi clean && cargo clean",
    "test": "bun test",
    "dev": "bun run --watch examples/dev.ts",
    "type-check": "tsc --noEmit",
    "format": "bun run --filter ./examples --filter ./scripts format",
    "lint": "rustup run stable cargo clippy -- -D warnings"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.1",
    "@types/bun": "^1.1.12",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "napi": {
    "binaryName": "tray-icon-node",
    "targets": [
      "x86_64-pc-windows-msvc",
      "i686-pc-windows-msvc",
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu"
    ]
  }
}
